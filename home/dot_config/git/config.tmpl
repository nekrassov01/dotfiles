[alias]
	s = status -s -b
	a = add .
	l = log -n 20 --color --abbrev-commit --oneline
	g = log -n 20 --color --abbrev-commit --graph
{{ if eq .chezmoi.os "darwin" -}}
[credential "https://github.com"]
	helper = osxkeychain
{{- else if eq .chezmoi.os "windows" -}}
[credential "https://github.com"]
	helper =
	helper = !'gh.exe' auth git-credential
{{- end }}
[core]
	editor = code --wait
	whitespace = space-before-tab,trailing-space
	trustctime = false
	precomposeunicode = true
	quotepath = false
	pager = LESSCHARSET=utf-8 less
[init]
	defaultbranch = main
[apply]
	whitespace = fix
[color]
	ui = auto
[fetch]
	prune = true
[pull]
	rebase = true
[merge]
	log = true
[diff]
	renames = copies
[help]
	autocorrect = 1
[ghq]
	root = ~/.repository
[user]
	name = nekrassov01
	email = unclek62@gmail.com
[includeIf "gitdir:~/.repository/github.com/nekrassov01/"]
  path = ~/.config/git/config.nekrassov01
[includeIf "gitdir:~/.repository/github.com/organization/"]
  path = ~/.config/git/config.organization
